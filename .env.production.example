# Production Environment Configuration
# Copy this file to .env for production deployment
# See docs/ENVIRONMENT_VARIABLES.md for complete reference

# Database Configuration
MONGODB_URI=your-production-mongodb-uri
DB_NAME=d4tasks

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration - CRITICAL FOR DEPLOYMENT
# These variables are essential for frontend-backend communication

# CLIENT_URL: Primary frontend URL (fallback if ALLOWED_ORIGINS is not set)
# MUST match your actual Netlify deployment URL
CLIENT_URL=https://d4media-erp.netlify.app

# ALLOWED_ORIGINS: Comma-separated list of allowed origins for CORS
# This takes precedence over CLIENT_URL if provided
# MUST include your actual frontend domain(s)
ALLOWED_ORIGINS=https://d4media-erp.netlify.app

# For multiple domains (staging + production):
# ALLOWED_ORIGINS=https://d4media-erp.netlify.app,https://staging-d4media.netlify.app,https://app.d4media.com

# Frontend API Configuration
# Set this in your Netlify environment variables
VITE_API_URL=https://your-backend-domain.com/api/v1

# Email (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# WhatsApp Service (DXing API)
WHATSAPP_ACCOUNT_ID=your-whatsapp-account-id
WHATSAPP_SECRET_KEY=your-whatsapp-secret-key