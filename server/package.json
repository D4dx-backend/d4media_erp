{
  "name": "d4-media-server",
  "version": "1.0.0",
  "description": "Backend server for D4 Media Task Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "simple": "node server-simple.js",
    "dev:simple": "nodemon server-simple.js",
    "fixed": "node server-fixed.js",
    "dev:fixed": "nodemon server-fixed.js",
    "test": "jest",
    "test:cors": "node test-cors-config.js",
    "test:cors:local": "node test-cors-local.js",
    "test:cors:deployment": "node test-cors-deployment.js",
    "test:cors:comprehensive": "node test-cors-comprehensive.js",
    "test:cors:ci": "node test-cors-ci.js",
    "verify:cors": "node verify-cors-setup.js",
    "setup": "node scripts/setup-env.js",
    "db:seed": "node src/utils/seedDatabase.js",
    "db:reset": "node src/utils/resetDatabase.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "start:staging": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop ecosystem.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs",
    "deploy:prod": "pm2 deploy ecosystem.config.js production",
    "deploy:staging": "pm2 deploy ecosystem.config.js staging"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.4",
    "pdfkit": "^0.13.0",
    "pm2": "^5.3.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
